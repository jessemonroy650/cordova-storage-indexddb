<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.bsdmasterindex.cordova-indexeddb-test"
        version     = "1.0.0">
        <!-- Tool Set Version -->        
        <preference name='phonegap-version' value='cli-5.2.0' />

        <name>Cordova indexeddb test</name>
        <description>Cordova indexeddb test</description>
        <author href="http://bsdmasterindex.com" email="jessemonroy650@yahoo.com">
        Jesse Monroy
        </author>

        <!-- Target Platforms -->
        <platform name="android" />
        <platform name="ios" />
        <platform name="winphone" />

        <!-- App requested permission -->
        <preference name="permissions" value="none"/>

        <!-- PLUGINS * PLUGINS * PLUGINS -->
        <plugin name="cordova-plugin-device"         source="npm" spec="1.0.1" />

        <!-- 3rd PARTY PLUGINS *3rd PARTY PLUGINS -->
        <!-- popular alternative to the google chrome webview -->
        <!-- <plugin name='org.crosswalk.engine' version='1.3.0' source='pgb' /> -->
        <plugin name='cordova-plugin-indexeddb-async' source='npm' spec='2.2.1' />
    </widget>
